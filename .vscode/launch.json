{
	"version": "0.2.0",
	"configurations": [
	  {
		"name": "Run with Sparqllm",
		"type": "python",
		"request": "launch",
		"program": "${workspaceFolder}/SPARQLLM/query_request.py",  // Chemin vers votre script Python
		"args": [
		  "${file}"  // Passe le fichier actuellement ouvert comme argument au script
		],
		"console": "integratedTerminal",
		"env": {
		  "PYTHONPATH": "${workspaceFolder}"
		}
	  }
	]
  }
  